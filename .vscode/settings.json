{
  "files.exclude": {
    //   //in workspace settings
    "**/node_modules": true,
    "**/*.spec.ts": true,
    "**/e2e": true,
    "**/.editorconfig": true,
    "**/polyfills.ts": true,
    "**/main.ts": false,
    "**/browserslist": true,
    "**/karma.conf.js": true,
    "**/package-lock.json": true,
    "**/tsconfig.app.json":true,
    "**/tsconfig.json": true,
    "**/tslint.json": true,
    "**/angular.json": false,
    "**/.gitignore": true,
    "**/test.ts": true,

    "**/tsconfig.spec.json": true,
    "protractor.conf.js": true,
    "typings": true,
    "**/*.map": true,
    ".vscode": false,
    "README.md": true,
    "**/*.js": {
      "when": "$(basename).ts"
    }
  }
}
